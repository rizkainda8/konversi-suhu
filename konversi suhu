#include <stdio.h>
main ()
{

float c,f,r;

printf(“KONVERSI SUHU DARI CELCIUS KE\n”);
printf(“Fahrenheit, Reamur\n”);

printf(“Masukkan Suhu Dalam Celcius :\n “);
scanf(“%f”,&c);
f = (1.8*c)+32;
r = 0.8*c;

printf(“      HASIL KONVERSI\n”);

printf(“Fahrenheit : %3.2f oC”, f);
printf(“Reamur     : %3.2f oC”, r);

}
